<%= form_with model: resource, url: url_for(action: action) do |f| %>
  <div class="flex flex-col gap-y-6">
    <div class="grid grid-cols-2 gap-x-16.5 pr-13">
      <%= render Forms::TextFieldComponent.new(form: f, attribute: :name, label: '資產名稱', required: 'required') %>
    </div>

    <div class="grid grid-cols-2 gap-x-16.5 pr-13">
      <%= render Forms::TextFieldComponent.new(form: f, attribute: :ticker, label: '資產代號', required: 'required') %>
    </div>

    <div class="w-2/4 pr-14.5">
      <%= render Forms::SelectComponent.new(
          label: '資產類別',
          name: f.field_name(:category),
          choices: category_select_options,
          selected: f.object.category,
          required: 'required',
          options: { class: "form-select" },
          html_options: {},
          error: f.object.errors[:category].to_sentence
        )
      %>
    </div>

    <div class="w-2/4 pr-14.5">
      <%= render Forms::SelectComponent.new(
          label: '幣別',
          name: f.field_name(:currency),
          choices: currency_select_options,
          selected: f.object.category,
          required: 'required',
          options: { class: "form-select" },
          html_options: {},
          error: f.object.errors[:currency].to_sentence
        )
      %>
    </div>

    <div class="mt-4">
      <%= f.submit '儲存', class: 'button' %>
    </div>
  </div>
<% end %>